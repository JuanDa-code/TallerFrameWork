@model TallerFrameWork.Models.producto_imagen

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Producto Imagen</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Imagen
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imagen)
        </dd>

        <dt>
            Producto
        </dt>

        <dd>
            @TallerFrameWork.Controllers.Producto_ImagenController.NombreProducto(Model.id_producto)
