@model IEnumerable<TallerFrameWork.Models.producto_compra>

@{
    ViewBag.Title = "Lista - Producto Compra";
}

<h2>Lista Producto Compra</h2>

<p>
    @Html.ActionLink("Registrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Producto
        </th>
        <th>
            Fecha Compra
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @TallerFrameWork.Controllers.Producto_CompraController.NombreProducto(item.id_producto)
            </td>
            <td>
                @TallerFrameWork.Controllers.Producto_CompraController.FechaCompra(item.id_compra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts {
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Está seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}